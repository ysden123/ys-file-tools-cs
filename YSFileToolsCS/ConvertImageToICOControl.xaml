<UserControl x:Class="YSFileToolsCS.ConvertImageToICOControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YSFileToolsCS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Margin="10">Source Image to convert to ICO:</Label>
        <TextBox x:Name="ImageFilePathTextBox" Width="200" Height="30" TextChanged="ImageFilePathTextBoxChanged"/>
        <Button x:Name="SelectSourceFileButton" Height="20" Margin="10" Click="SelectSourceFileButton_Click">...</Button>
        <Label Margin="10">Target folder:</Label>
        <TextBox x:Name="TargetFolderTextBox" Width="200" Height="30" TextChanged="TargetFolderTextBoxChanged"/>
        <Button x:Name="SelectTargetFolderButton" Height="20" Margin="10" Click="SelectTargetFolderButton_Click">...</Button>
        <Button x:Name="ConvertButton" Height="40" Margin="10" Click="ConvertButton_Click" IsEnabled="False">Convert image</Button>
    </StackPanel>
</UserControl>
