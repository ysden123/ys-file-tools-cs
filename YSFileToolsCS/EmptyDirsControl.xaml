<UserControl x:Class="YSFileToolsCS.EmptyDirsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YSFileToolsCS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <GroupBox Header="Empty directories">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Label Margin="5,0,0,0">Choose directory:</Label>
                    <TextBox x:Name="DirectoryText" Width="300" Height="20" Margin="5,0,0,0"/>
                    <Button x:Name="ChooseDirButton" Click="ChooseDirButton_Click" Margin="5,0,0,0">...</Button>
                    <Button x:Name="FindButton" Click="FindButton_Click" Margin="5,0,0,0">Find</Button>
                </StackPanel>
                <Border BorderBrush="Black" BorderThickness="1" Margin="10">
                    <TextBlock x:Name="EmptyListText" Padding="5"/>
                </Border>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</UserControl>
