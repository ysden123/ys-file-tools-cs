<UserControl x:Class="YSFileToolsCS.ShowSpecialFolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YSFileToolsCS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <ListBox x:Name="FolderList" Margin="5,5,5,5" Padding="5" SelectionChanged="FolderList_SelectionChanged"/>
        <TextBox Margin="5,5,5,5" x:Name="FolderText" Width="400" Height="40" IsReadOnly="True" HorizontalScrollBarVisibility="Auto"/>
        <Button x:Name="CopyToClipBoardButton" Content="Copy" Margin="5,5,5,5" Height="25" Click="CopyToClipBoardButton_Click"/>
    </StackPanel>
</UserControl>
